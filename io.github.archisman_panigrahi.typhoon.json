{
  "app-id": "io.github.archisman_panigrahi.typhoon",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "typhoon",
  "modules": [
    {
      "name": "typhoon",
      "buildsystem": "meson",
      "builddir": "build",
      "sources": [
        {
          "type": "git",
