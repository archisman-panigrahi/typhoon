{
    "app-id" : "io.github.archisman_panigrahi.typhoon",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "sdk-version" : "48",
    "command" : "typhoon",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=all",
        "--talk-name=org.freedesktop.DBus"
    ],
    "build-extensions": [
        "org.gnome.Platform.Extension.Python3-dbus"
    ],
    "modules" : [
        {
            "name": "typhoon",
            "buildsystem": "meson",
            "config-opts": [
                "--prefix=/app",
                "--libdir=lib"
            ],
            "sources": [
                {
                    "type": "dir"
                }
            ]
        }
    ],
    "metadata" : {
        "name" : "Typhoon",
        "version" : "0.9.85",
        "summary" : "A weather application providing real-time weather updates.",
        "description" : "Typhoon is a weather application that provides real-time weather updates and forecasts. It is designed to be user-friendly and efficient.",
        "license" : "MIT",
        "homepage" : "https://github.com/archisman-panigrahi/typhoon",
        "issues" : "https://github.com/archisman-panigrahi/typhoon/issues"
    },
    "build-options" : {
        "env" : {        }
    }
}
